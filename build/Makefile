# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  imgui_config = debug
  Main_config = debug

else ifeq ($(config),release)
  imgui_config = release
  Main_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := imgui Main

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

imgui:
ifneq (,$(imgui_config))
	@echo "==== Building imgui ($(imgui_config)) ===="
	@${MAKE} --no-print-directory -C . -f imgui.make config=$(imgui_config)
endif

Main: imgui
ifneq (,$(Main_config))
	@echo "==== Building Main ($(Main_config)) ===="
	@${MAKE} --no-print-directory -C . -f Main.make config=$(Main_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f imgui.make clean
	@${MAKE} --no-print-directory -C . -f Main.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   imgui"
	@echo "   Main"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"